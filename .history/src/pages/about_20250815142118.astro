---
// Importaciones necesarias
import BaseLayout from "../layouts/BaseLayout.astro";
// This is the "About Me" page for my Astro site.
const pageTitle = "About Me"

// Here is some information about me, my skills, and my progress learning Astro.
const identity = {
  firstName: "Daniel Ruiz",
  alias: "elCoco",
  occupation: "customer support by day and web design by night (running joke)",
  hobbies: ["music (guitar, jazz)", "coding"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro"];

// Progress indicators
const happy = true;
const finished = true; // still cooking!
const goal = 3;

// This will be used in the CSS class for the skills list items.
const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---
<BaseLayout pageTitle={pageTitle}>
    <style is:global define:vars={{skillColor, fontWeight, textCase}}>
            h1 {
                color: purple;
                font-size: 4rem;
            }
            .skill {
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                text-transform: var(--textCase);
            }
    </style>

    <h2>...and this little site!</h2>
    <p>I'm tinkering with this site as I go â€” Astro is in the mix, but the point is to ship small, useful things.</p>

    <p>Here are a few facts about me:</p>
    <ul>
        <li>My name is {identity.firstName} (a.k.a. {identity.alias}).</li>
        <li>I do {identity.occupation}.</li>
        {identity.hobbies.length >= 2 ?
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li> :
            <li>My hobby is {identity.hobbies[0]}</li>
        }
    </ul>

    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {happy && <p>I am happy to be learning and building.</p>}
    
    {goal === 3 ? <p>My goal is to finish in {goal} days.</p> : <p>My goal is not {goal} days.</p>}
    
    {finished && <p>Update: Astro tutorial Finished</p>}
</BaseLayout>
